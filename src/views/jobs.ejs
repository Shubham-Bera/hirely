          <p class="card-text"><i class="fa-solid fa-location-dot"></i> <%= job.jobLocation %></p>
          <p class="card-text"><i class="fa-solid fa-indian-rupee-sign"></i> <%= job.salary %></p>
          <div class="skills">
            <% job.skills.forEach(skill => { %>
              <span class="skill-badge"><%= skill %></span>
            <% }) %>
          </div>
  
          <a href="/jobs/<%= job.id %>" class="view-btn mt-3 d-block text-center">View details</a>
        </div>
      </div>
    <% }); %>
  </div> 
<% } %>
